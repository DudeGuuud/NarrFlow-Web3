{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api-dist",
    "rootDir": "./api",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
